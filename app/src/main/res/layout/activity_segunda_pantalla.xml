<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaPantalla">

    <ImageView
        android:id="@+id/imageView3"
        style="@style/srcQuantumBackground"
        android:layout_width="112dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="17dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/QTMtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorQuantum"
        android:textSize="16sp"
        android:visibility="visible" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp" />

    <TableLayout
        android:id="@+id/tablaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QTMtitulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp">

        <TableRow
            android:id="@+id/columnaEncapsula"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_borde2">

            <TextView
                android:id="@+id/item"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_button2"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/descItem"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textColor="@color/colorQuantum"
                android:textSize="12sp"
                android:textStyle="normal" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tablaItem"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/planta"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="SUC/PLANTA"
        android:textColor="@color/colorQuantum"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/planta"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tablaItem"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:autoText="false"
        android:background="@drawable/ic_borde2"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorQuantum"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button3"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="TOTAL 150"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TableLayout
        android:id="@+id/tablaUm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/planta"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/total">

        <TableRow
            android:id="@+id/umTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_borde2">

            <TextView
                android:id="@+id/UMLiteral"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_button3"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="UM"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/UM"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textColor="@color/colorQuantum"
                android:textSize="15sp"
                android:textStyle="normal" />

        </TableRow>
    </TableLayout>

    <HorizontalScrollView
        android:id="@+id/itemsTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablaUm"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="PS"
                    android:textColor="@color/colorQuantum"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="UBICACION"
                    android:textColor="@color/colorQuantum"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="LOTE"
                    android:textColor="@color/colorQuantum"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="EXIST."
                    android:textColor="@color/colorQuantum"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="COMPR."
                    android:textColor="@color/colorQuantum"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="DISP"
                    android:textColor="@color/colorQuantum"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </TableRow>

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/sc1"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/volver"
        android:layout_below="@+id/itemsTable"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/psD"
                        android:layout_width="30dp"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/ubicacion"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/lote"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/exist"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/compr"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/disp"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:textSize="10sp" />

                </TableRow>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_below="@+id/itemsTable"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="123dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progresbar"
        android:visibility="visible" />


    <Button
        android:id="@+id/volver"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/ic_borde2"
        android:fontFamily="@font/roboto"
        android:onClick="Volver"
        android:text="VOLVER"
        android:textColor="#D4145A"
        android:textSize="12sp"
        android:visibility="visible"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto"
        android:text="VersiÃ³n 2.0"
        android:textColor="@color/colorQuantum"
        android:visibility="invisible" />

</RelativeLayout>