<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipal">

    <ImageView
        android:id="@+id/imageView6"
        style="@style/srcQuantumBackground"
        android:layout_width="112dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="17dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/roboto"
        android:text="Versión 2.0"
        android:textColor="@color/colorQuantum"
        android:textSize="10sp"
        android:visibility="invisible" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/QTMtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/roboto"
        android:text="QTM - DISPONIBILIDAD"
        android:textColor="@color/colorQuantum"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/codigoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/descripcionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sucPlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="70dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QTMtitulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="BÚSQUEDA"
        android:textAlignment="center"
        android:textColor="@color/colorQuantum"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemABuscar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="CÓDIGO ITEM"
        android:textAlignment="center"
        android:textColor="@color/colorQuantum"
        android:textSize="13sp"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/checkBoxCodItem"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_borde4"
        android:button="@drawable/image_checkbox"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textSize="1sp"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBuscarItem"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="2dp">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="60dp"
                                android:layout_height="28dp"
                                android:background="@drawable/ic_borde4"
                                android:fontFamily="@font/roboto"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:text="ITEM"
                                android:textColor="@color/colorQuantum"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                            <Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:background="@drawable/ic_borde4"
                                android:fontFamily="@font/roboto"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:text="DESCRIPCIÓN"
                                android:textColor="@color/colorQuantum"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                            <Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="30dp"
                                android:layout_height="28dp"
                                android:background="@drawable/ic_borde4"
                                android:fontFamily="@font/roboto"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:text="UM"
                                android:textColor="@color/colorQuantum"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                            <Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:background="@drawable/ic_borde4"
                                android:fontFamily="@font/roboto"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:text="SUC/PLANTA"
                                android:textColor="@color/colorQuantum"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                            <Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="82dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/ic_borde4"
                                android:fontFamily="@font/roboto"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:text="EXIST."
                                android:textColor="@color/colorQuantum"
                                android:textSize="10sp"
                                android:textStyle="normal" />

                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="121dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progresbar"
        android:visibility="visible" />

    <HorizontalScrollView
        android:id="@+id/scInfo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_above="@+id/limpiar"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/tblItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/itemRecycler"
                            android:layout_width="63dp"
                            android:layout_height="fill_parent"
                            android:clickable="false">

                        </androidx.recyclerview.widget.RecyclerView>

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                        <HorizontalScrollView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="13dp">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/descripcion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:gravity="start|top"
                                    android:textAlignment="gravity"
                                    android:textColor="@color/textColor"
                                    android:textSize="9dp"
                                    android:visibility="visible"
                                    app:autoSizeTextType="none" />
                            </LinearLayout>
                        </HorizontalScrollView>

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/datosUM"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="13dp"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:textColor="@color/textColor"
                            android:textSize="9dp"
                            android:visibility="visible"
                            app:autoSizeTextType="none" />

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/sucursal"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="13dp"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:textColor="@color/textColor"
                            android:textSize="9dp"
                            android:visibility="visible"
                            app:autoSizeTextType="none" />

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/existencias"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="13dp"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:textColor="@color/textColor"
                            android:textSize="9dp"
                            android:visibility="visible"
                            app:autoSizeTextType="none" />

                    </TableRow>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/finalizar"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/custom_button3"
        android:fontFamily="@font/roboto"
        android:onClick="Salir"
        android:text="FINALIZAR"
        android:textSize="12sp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/limpiar"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/ic_borde2"
        android:fontFamily="@font/roboto"
        android:onClick="Limpiar"
        android:text="LIMPIAR"
        android:textColor="#D4145A"
        android:textSize="12sp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnBuscarItem"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/checkBoxCodItem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button3"
        android:fontFamily="@font/roboto"
        android:onClick="buscoItem"
        android:text="Buscar"
        android:textSize="12sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/itemABuscar"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_borde4"
        android:ems="10"
        android:inputType="textCapSentences|textCapWords|textCapCharacters"
        android:textAllCaps="true"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/letraEspacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="2sp"
        android:visibility="visible" />

</RelativeLayout>

